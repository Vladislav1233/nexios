include ../button/button

mixin card(src, title, description)
    +b.card
        if(src)
            +e('div').image-wrapper
                +e('img')(src=src, alt=title).image

        +e('div').content
            +e('h3').title #{title}

            +e.text
                p #{description}

        +e('div').button
            +button('a', '', '#arrow-right')(href="blog.html").--without-text


